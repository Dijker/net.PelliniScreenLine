{
  "id": "net.pelliniscreenline",
  "sdk": 2,
  "name": {
    "en": "ScreenLine Remote",
    "nl": "ScreenLine Afstandsbediening"
  },
  "description": {
    "en": "Add support for ScreenLine Remote Control Blinds",
    "nl": "voeg ondersteuning voor ScreenLine Afstandsbediening toe"
  },
  "category": "climate",
  "version": "0.0.7",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Geurt Dijker"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "Dijker"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/Dijker/net.PelliniScreenLine/issues"
  },
  "athomForumDiscussionId": 4399,
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "signals": {
    "433": {
      "screenline": {
        "sof": [
          1012,
          481,
          328,
          471,
          338,
          465,
          343,
          460,
          348,
          455,
          353,
          451,
          356,
          448,
          361,
          444,
          361,
          444,
          361,
          444,
          362,
          443,
          363,
          4467
        ],
        "eof": [
          359,
          2784
        ],
        "words": [
          [
            398,
            808
          ],
          [
            768,
            440
          ]
        ],
        "interval": 10000,
        "repetitions": 20,
        "sensitivity": 0.5,
        "minimalLength": 48,
        "maximalLength": 48
      }
    }
  },
  "flow": {
    "actions": [
      {
        "id": "tilt",
        "title": {
          "en": "tilt window covering",
          "nl": "kantel raambekleding"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=SL2392S159&capabilities=windowcoverings_tilt_up"
          },
          {
            "name": "direction",
            "type": "dropdown",
            "values": [
              {
                "id": "up",
                "label": {
                  "en": "up",
                  "nl": "omhoog"
                }
              },
              {
                "id": "down",
                "label": {
                  "en": "down",
                  "nl": "omlaag"
                }
              }
            ]
          },
          {
            "name": "steps",
            "type": "number",
            "min": 1,
            "max": 40,
            "step": 1,
            "placeholder": {
              "en": "Amount of steps",
              "nl": "Aantal stappen"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "SL2392S159",
      "name": {
        "en": "ScreenLine Remote",
        "nl": "ScreenLine Afstandsbediening"
      },
      "icon": "./drivers/SL2392S159/assets/blinds.svg",
      "class": "windowcoverings",
      "capabilities": [
        "windowcoverings_state",
        "dim",
        "windowcoverings_tilt_up",
        "windowcoverings_tilt_down",
        "windowcoverings_tilt_set"
      ],
      "images": {
        "large": "./drivers/SL2392S159/assets/images/large.png",
        "small": "./drivers/SL2392S159/assets/images/small.png"
      },
      "rf": {
        "signal": "screenline"
      },
      "settings": [],
      "pair": [
        {
          "id": "imitate",
          "rf_template": "imitate",
          "navigation": {}
        },
        {
          "id": "test_switch",
          "rf_template": "test_switch",
          "navigation": {
            "prev": "imitate",
            "next": "done"
          }
        },
        {
          "id": "done",
          "rf_template": "done"
        }
      ]
    }
  ],
  "mobile": {
    "components": [
      {
        "id": "icon"
      },
      {
        "id": "button",
        "capabilities": [
          "windowcoverings_tilt_up"
        ],
        "options": {
          "icons": {
            "windowcoverings_tilt_up": "/assets/icons/windowcoverings_tilt_up.svg"
          }
        }
      },
      {
        "id": "button",
        "capabilities": [
          "windowcoverings_tilt_down"
        ],
        "options": {
          "icons": {
            "windowcoverings_tilt_down": "/assets/icons/windowcoverings_tilt_down.svg"
          }
        }
      },
      {
        "id": "ternary",
        "capabilities": [
          "windowcoverings_state"
        ]
      }
    ]
  },
  "capabilitiesOptions": {
    "windowcoverings_tilt_up": {
      "title": {
        "en": "Tilt up",
        "nl": "Kantel omhoog"
      }
    },
    "windowcoverings_tilt_down": {
      "title": {
        "en": "Tilt down",
        "nl": "Kantel omlaag"
      }
    }
  },
  "permissions": [
    "homey:wireless:433"
  ]
}
