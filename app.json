{
  "id": "net.pelliniscreenline",
  "version": "0.0.8",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "brandColor": "#FF0000",
  "name": {
    "en": "ScreenLine",
    "nl": "ScreenLine"
  },
  "description": {
    "en": "Add support for ScreenLine Remote Control Blinds",
    "nl": "Voeg ondersteuning voor ScreenLine Afstandsbediening toe"
  },
  "category": "climate",
  "tags": {
    "en": [
      "inBlindz",
      "Screenline",
      "PelliniScreenLine",
      "ScreenLine",
      "StolkerGlas"
    ],
    "nl": [
      "inBlindz",
      "Screenline",
      "PelliniScreenLine",
      "ScreenLine",
      "StolkerGlas"
    ]
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "permissions": [
    "homey:wireless:433"
  ],
  "author": {
    "name": "Geurt Dijker"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "Dijker"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/Dijker/net.PelliniScreenLine/issues"
  },
  "athomForumDiscussionId": 4399,
  "homeyCommunityTopicId": 313,
  "flow": {
    "actions": [
      {
        "id": "tilt",
        "title": {
          "en": "tilt window covering",
          "nl": "kantel raambekleding"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=SL2392S159&capabilities=windowcoverings_tilt_up"
          },
          {
            "name": "direction",
            "type": "dropdown",
            "values": [
              {
                "id": "up",
                "label": {
                  "en": "up",
                  "nl": "omhoog"
                }
              },
              {
                "id": "down",
                "label": {
                  "en": "down",
                  "nl": "omlaag"
                }
              }
            ]
          },
          {
            "name": "steps",
            "type": "number",
            "min": 1,
            "max": 40,
            "step": 1,
            "placeholder": {
              "en": "Amount of steps",
              "nl": "Aantal stappen"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "images": {
        "large": "./drivers/SL2392S159/assets/images/large.png",
        "small": "./drivers/SL2392S159/assets/images/small.png"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "rotated",
              "type": "radio",
              "value": "0",
              "label": {
                "en": "Invert up/down signal",
                "nl": "Inverteer omhoog/omlaag signaal"
              },
              "values": [
                {
                  "id": "0",
                  "label": {
                    "en": "No",
                    "nl": "Nee"
                  }
                },
                {
                  "id": "180",
                  "label": {
                    "en": "Yes",
                    "nl": "Ja"
                  }
                }
              ]
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "rf.imitate",
          "options": {
            "body": "rf.pair.imitate.body.blinds",
            "svg": "assets/remote.svg"
          }
        },
        {
          "id": "rf.test_blinds.2",
          "navigation": {
            "prev": "rf.imitate",
            "next": "rf.done"
          }
        },
        {
          "id": "rf.done"
        }
      ],
      "name": {
        "en": "ScreenLine Remote",
        "nl": "ScreenLine Afstandsbediening"
      },
      "icon": "./drivers/SL2392S159/assets/blinds.svg",
      "class": "windowcoverings",
      "capabilities": [
        "windowcoverings_state",
        "windowcoverings_tilt_set",
        "windowcoverings_tilt_up",
        "windowcoverings_tilt_down"
      ],
      "rf": {
        "signal": "screenline"
      },
      "id": "SL2392S159"
    }
  ],
  "signals": {
    "433": {
      "screenline": {
        "sof": [
          1012,
          481,
          328,
          471,
          338,
          465,
          343,
          460,
          348,
          455,
          353,
          451,
          356,
          448,
          361,
          444,
          361,
          444,
          361,
          444,
          362,
          443,
          363,
          4467
        ],
        "eof": [
          359,
          2784
        ],
        "words": [
          [
            398,
            808
          ],
          [
            768,
            440
          ]
        ],
        "interval": 10000,
        "repetitions": 20,
        "sensitivity": 0.5,
        "minimalLength": 48,
        "maximalLength": 48
      }
    }
  }
}