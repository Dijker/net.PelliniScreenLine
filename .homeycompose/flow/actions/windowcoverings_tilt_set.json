{
  "id": "tilt",
  "title": {
    "en": "tilt window covering",
    "nl": "kantel raambekleding"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=SL2392S159&capabilities=windowcoverings_tilt_up"
    },
    {
      "name": "direction",
      "type": "dropdown",
      "values": [
        {
          "id": "up",
          "label": {
            "en": "up",
            "nl": "omhoog"
          }
        },
        {
          "id": "down",
          "label": {
            "en": "down",
            "nl": "omlaag"
          }
        }
      ]
    },
    {
      "name": "steps",
      "type": "number",
      "min": 1,
      "max": 40,
      "step": 1,
      "placeholder": {
        "en": "Amount of steps",
        "nl": "Aantal stappen"
      }
    }
  ]
}
